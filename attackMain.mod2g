use UTbot as knowledge.
use CaptureTheFlag as module.
use killModus as module.
use Pickup as module.
use selectWeapon as module.
use Action as actionspec.
	


module attackMain {
	
		if a-goal(goHomeWithFlag(ID)), bel(not(escort))then drop(goHomeWithFlag(ID)) + navigate(ID).
		
		if a-goal(goGrabEnemy(ID)), bel(not(escort))then drop(goGrabEnemy(ID)) + navigate(ID).
		
		if a-goal(killModus), bel(pickup(UnrealID,_,_), not(escort)),not(bel(pickup(UnrealID,_,bio_rifle)))then navigate(UnrealID).

	
	
	if goal(goEscort(UnrealID)), bel(escort) then drop(goEscort(UnrealID)) + navigate(UnrealID).
	
	
	if a-goal(fraggedBot(UnrealID)) then stop + killModus.
	if a-goal(fraggedBot(UnrealID,location(X,Y,Z))), not(bel(weaponSelected)) then selectWeapon.
	
	if a-goal(pickup) then Pickup.
	
}