use Knowledge as knowledge.

	% Make a best effort attempt to go to the Destination.
	define navigate(Destination) with
			pre { not(navigation(navigating,_)) }
			post { true }	
	
	% Look at at given target.
	define look(Target) with
			pre { true }
			post { lookingAt(Target) }	

	% The bot will equip the weapons in the WeaponList.
	define prefer(WeaponList) with
			pre { true }
			post { true }
			
	% Stop action.	
	define stop with
			pre { true }
			post { true }
	
	% Define the conditions needed for the shoot action.
	define shoot(TargetLabel) with
			pre { true }
			post { true }
	